@model ToDoList

@{
    ViewData["Title"] = "CreateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Yapılacak İşlem Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Başlık & İçerik</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="date" asp-for="Date" class="form-control" />
							<br />
							<label>Görsel Yolu</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">Yapılacak İşi Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
